<odoo>
    <record id="product_temp" model="ir.ui.view">
        <field name="name">product.product.expense.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="hr_expense.product_product_expense_form_view"/>
        <field name="arch" type="xml">
            <field name="description" position="after">
                <field name="type_d" string="Type de Dossier" placeholder="Ex: Operations"/>
            </field>
        </field>
    </record>

<record id="expense_up" model="ir.ui.view">
    <field name="name">hr.expense.view.form.inherit</field>
    <field name="model">hr.expense</field>
    <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
    <field name="arch" type="xml">
        <field name="product_uom_category_id" position="after">
            <field name="type_d" string="Type de Dossier" options="{'no_create': True}"/>
            <field name="vehicle_id"
                   options="{'no_create': True}"
                   invisible="type_d != 'administration'"/>
            <field name="proj_id" options="{'no_create': True}"
                   string="Projet"
                   domain="[('state', '=', 'in_progress'), ('Type_d', '=', type_d)]" />
        </field>
    </field>
</record>


<record id="expense_up_s" model="ir.ui.view">
    <field name="name">hr.expense.view.sheet.form.inherit</field>
    <field name="model">hr.expense.sheet</field>
    <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form"/>
    <field name="arch" type="xml">
        <field name="payment_mode" position="after">
            <field name="proj_id" options="{'no_create': True}"
                   string="Projet"
                   domain="[('state','=','in_progress')]" />
        </field>
    </field>
</record>

</odoo>